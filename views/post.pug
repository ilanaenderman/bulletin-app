html
	head
		script(src='/main.js')
		script(src='/jquery-3.1.1.min.js')
		script(src='/custom.js')

		link( href="/css/materialize.min.css" type="text/css" rel="stylesheet" )
		link( href="/style.css" type="text/css" rel="stylesheet" )
	body
		nav
			div.nav-wrapper
				a#logo.brand-logo Blog 

				ul.right
					li 
						a#logo= user.fname + " " + user.lname
					li
						a(href='/profile') Home
					li
						a(href='/newpost') Write Post
					li
						a(href='/mypost') My Posts
					li
						a(href='/allpost') All Posts
					li
						a(href='/logout') Log Out
			
		div#header.valign-wrapper
			div.row.valign
				div.col.l12
		main
			div.container
				div.row
					div.col.l8.offset-l2
						div#topcard.card
							div.card-content
								div(class='container')
									div(class='head')
										h2 Specific Post
									br
									each thing in specific
										div.card-content
											div(class='head')
												h4 #{thing.title}
												p #{thing.body}
												br
												p#author By #{thing.user.fname} #{thing.user.lname}
												br
											hr(id='newMessage')
											h5 Comments
											form(method='post' action='/post')
												input(name='comment' id='input' type='text' placeholder='Enter Comment')
												input(name='postID' value= thing.id type='hidden')
												div(class='write')
												button#button(type='submit' class='btn btn-default') Comment
												br
												br
												- for(var i = 0; i < thing.comments.length; i++)
													p #{thing.comments[i].body} - #{thing.comments[i].user.fname} #{thing.comments[i].user.lname}

		footer.page-footer
			div.container
				div.container.grey-text Â© 2016 Ilana Enderman

		script( src="/jquery-3.1.1.min.js" )
		script( src="/js/materialize.min.js" )
		script( src="/main.js" )