html
	head
		title #{title}
		link( href="/css/materialize.min.css" type="text/css" rel="stylesheet" )
		link( href="/style.css" type="text/css" rel="stylesheet" )
	body
		nav
			div.nav-wrapper
				a#logo.brand-logo Bulletin Board
				ul.right
					li
						a(id='href' href="/addMessage") Add Message

		div#header.valign-wrapper
			div.row.valign
				div.col.l12
					h1.center.white-text 
		main
			div.container
				div.row
					div.col.l10.offset-l1
						div#topcard.card
							div.card-content
								form(id='contact' method='POST' action='/search')
									div(class='container')
										div(class='head')
				
										each thing in result
											div.card-content
												h2 #{thing.title}
												p#lead #{thing.body}
												hr(id='newMessage')

										br
		footer.page-footer
			div.container
				div.container.grey-text Â© 2016 Ilana Enderman
				br
		script( src="/jquery-3.1.1.min.js" )
		script( src="/js/materialize.min.js" )
		script( src="/main.js" )